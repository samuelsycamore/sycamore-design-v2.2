          <input type="email" name="email" class="email" placeholder="Enter your email" id="bd-email" />
          <input type="hidden" value="1" name="embed" />
          <input class="btn input-btn" type="submit" value="Sign Up" />
        </form>
      </div>
    </div>
  </div>
