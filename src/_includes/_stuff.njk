{% macro card(url, img, title, name, desc) %}
  <a href="{{ url }}" target="_blank">
    <div class="stuff-card">
      <img src="../img/icons/{{ img }}"/>
      <h3 class="card-title mono">

        {{ title }}
      </h3>
      <p>
        <strong>{{ name }}</strong>
        {{ desc }}
      </p>
    </div>
  </a>
{% endmacro %}

